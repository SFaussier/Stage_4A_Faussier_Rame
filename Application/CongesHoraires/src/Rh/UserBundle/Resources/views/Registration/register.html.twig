{% extends "RhUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    <div class="well">
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
            {# form_widget(form) #}
            {{ form_errors(form) }}
            <div>
                {{ form_label(form.nom, "Nom") }}
                {{ form_errors(form.nom) }}
                {{ form_widget(form.nom) }}
            </div>
            <div>
                {{ form_label(form.prenom, "Prenom") }}
                {{ form_errors(form.prenom) }}
                {{ form_widget(form.prenom) }}
            </div>
            <div>
                {{ form_label(form.email, "E-mail") }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
            </div>
            <div>
                {{ form_label(form.username, "Matricule") }}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username) }}
            </div>
            <div>
                {{ form_label(form.plainPassword, "Mot de passe") }}
                {{ form_errors(form.plainPassword) }}
                {{ form_row(form.plainPassword) }}
            </div>
            <div>
                {{ form_label(form.entreeEntreprise, "Entr√©e dans l'entreprise") }}
                {{ form_errors(form.entreeEntreprise) }}
                {{ form_widget(form.entreeEntreprise) }}
            </div>
            <div>
                {{ form_label(form.cadre, "Cadre") }}
                {{ form_errors(form.cadre) }}
                {{ form_widget(form.cadre) }}
            </div>
            {{ form_rest(form) }}
            <div>
                <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
            </div>
        </form>
    </div>
{% endblock fos_user_content %}